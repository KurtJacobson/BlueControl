/*===========================================================================*/
/*                              QComboBox                                    */
/*===========================================================================*/

QComboBox {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 3px;
    margin: 5px;
    padding: 5px;
    min-width: 6em;
    min-height: 30px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;

    margin-top: 5px;
    margin-bottom: 5px;

    border-left-width: 1px;
    border-left-color: rgb(77, 77, 77);
    border-left-style: solid; /* just a single line */
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    image: url(icons/arrow-down.png);
}

QComboBox::down-arrow:on { /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}


QListView {
    background: blue;
}


QAbstractItemView {
    color: white;
    background-color: rgb(33, 35, 45);
    alternate-background-color: rgb(30, 30, 40);
    border: 1px solid rgb(77, 77, 77);
    border-radius: 5px;
}

QAbstractItemView::item {
    background-color: transparent;
    min-height: 30px;
}

QAbstractItemView::item:selected {
    color: rgb(200, 200, 200);
    background-color: rgb(20, 20, 30);
}

/*===========================================================================*/
/*                              QSpinBox                                     */
/*===========================================================================*/


QSpinBox,
QDoubleSpinBox {
    min-height: 25px;
    min-width: 150px;
    border: 1px solid rgb(77, 77, 77);
    border-radius: 3px;
}

QSpinBox:focus,
QDoubleSpinBox:focus {
    border-color: rgb(77, 177, 177);
}

QSpinBox::up-button,
QDoubleSpinBox::up-button {
    subcontrol-origin: margin;
    subcontrol-position: center right;
    width: 35px;
    height: 24px;
    border-left: 1px solid rgb(77, 77, 77);
}

QSpinBox::up-bottom:hover,
QDoubleSpinBox::up-button:hover {
    border-image: url(:/images/spinup_hover.png) 1;
}

QSpinBox::up-button:pressed,
QDoubleSpinBox::up-button:pressed {
    border-image: url(:/images/spinup_pressed.png) 1;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow {
    image: url(icons/plus.png);
}

QSpinBox::up-arrow:off,
QSpinBox::up-arrow:disabled,
QDoubleSpinBox::up-arrow:off,
QDoubleSpinBox::up-arrow:disabled { /* off state when value is max */
   image: url(:/images/up_arrow_disabled.png);
}

QSpinBox::down-button,
QDoubleSpinBox::down-button {
    subcontrol-origin: margin;
    subcontrol-position: center left;

    width: 35px;
    height: 24px;
    border-right: 1px solid rgb(77, 77, 77);
}

QSpinBox::down-button:hover,
QDoubleSpinBox::down-button:hover {
    border-image: url(:/images/spindown_hover.png) 1;
}

QSpinBox::down-button:pressed,
QDoubleSpinBox::down-button:pressed {
    border-image: url(:/images/spindown_pressed.png) 1;
}

QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    image: url(icons/minus.png);
}

QSpinBox::down-arrow:off,
QSpinBox::down-arrow:disabled,
QDoubleSpinBox::down-arrow:off,
QDoubleSpinBox::down-arrow:disabled { /* off state when value in min */
   border-image: url(:/icons/spindown_pressed.png);
}



/*===========================================================================*/
/*                              QTableView                                    */
/*===========================================================================*/


QHeaderView {
    background-color: black;
    border: 1px solid green;
    height: 25px;
}

QHeaderView::section {
    color: white;
    padding-left: 0px;
    background-color: rgb(77, 77, 77);
}


QHeaderView::section {
background-color: rgb(77, 77, 77);
color: white;
padding-left: 4px;
/* border: 1px solid green; */
}

QHeaderView::section:checked
{
    background-color: red;
}

/* style the sort indicator */
QHeaderView::down-arrow {
    image: url(icons/arrow-down.png);
}

QHeaderView::up-arrow {
    image: url(icons/arrow-up.png);
}




/*===========================================================================*/
/*                              QScrollBar                                   */
/*===========================================================================*/

QTableView, QListView, GcodeEditor QScrollBar:horizontal {
    margin: 0px 0px -1px -1px
}

QTableView, QListView, GcodeEditor QScrollBar:vertical {
    margin: -1px -1px 0px 0px
}


QScrollBar:horizontal {
    border: 1px solid rgb(77, 77, 77);;
    border-radius: 3px;
    background: transparent;
    height: 30px;
    margin: 0px 0px 0px 0px
}

QScrollBar::handle:horizontal {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 3px;
    margin: 1px;
    margin: 1px 21px 1px 21px;
    background: gray;
    min-width: 40px;
    max-width: 50px;
}

QScrollBar::add-line:horizontal {
    border-left: 1px solid rgb(77, 77, 77);
    margin-top: 5px;
    margin-bottom: 5px;
    background: transparent;
    width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
    border-right: 1px solid rgb(77, 77, 77);
    margin-top: 5px;
    margin-bottom: 5px;
    background: transparent;
    width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar:left-arrow:horizontal{
     image: url(icons/arrow-left.png);
}

QScrollBar::right-arrow:horizontal {
     image: url(icons/arrow-right.png);
}


QScrollBar:vertical {
    border: 1px solid rgb(77, 77, 77);;
    border-radius: 3px;
    background: transparent;
    width: 30px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 3px;
    margin: 21px 1px 21px 1px;
    background: gray;
    min-height: 40px;
}

QScrollBar::sub-line:vertical {
    border-bottom: 1px solid rgb(77, 77, 77);
    margin-left: 5px;
    margin-right: 5px;
    background: transparent;
    height: 20px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
    border-top: 1px solid rgb(77, 77, 77);
    margin-left: 5px;
    margin-right: 5px;
    background: transparent;
    height: 20px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical {
     image: url(icons/arrow-up.png);
}

QScrollBar::down-arrow:vertical {
     image: url(icons/arrow-down.png);
}
