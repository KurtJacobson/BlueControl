QsciScintilla {
    qproperty-backgroundcolor: #D9DADB;
    qproperty-marginbackgroundcolor: #D9DADB;
}

QMenu {
    background-color: #ABABAB; /* sets background of the menu */
    border: 1px solid rgb(77, 77, 77);
    border-radius: 5px;
}

QMenu::item {
    /* sets background of menu item. set this to something non-transparent
        if you want menu color and menu item color to be different */
    background-color: transparent;
}

QMenu::item:selected { /* when user selects item using mouse or keyboard */
    background-color: rgb(101, 67, 33);
}

QMenu::item:disabled { /* when user selects item using mouse or keyboard */
    color: rgb(77, 77, 77);
}

QWidget {
   background: rgb(46, 49, 63);
   color: white;
}

Line {
    border-top: 1px solid rgb(77, 77, 77);
    max-height: 1px;
}

QPushButton {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
    padding: 5px;
}

QPushButton {
    color: red;
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
    padding: 5px;
    background: rgb(17, 0, 30)
}

QPushButton:hover {
    background: rgb(101, 67, 33);
}

QPushButton:pressed {
    background: rgb(0, 170, 0);
}

QGroupBox {
    background: rgb(33, 35, 45);
    border: 1px solid rgb(77, 77, 77);
    border-radius: 6px;
    padding: 5px;
    padding-top: 30px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    top: 10px;
    color: white;
    font-size: 14px;
    margin: 1px;
    background-color: transparent;
}

QTabWidget::pane {
    background: red;
}

QTabBar {
    color: white;
    background: none;
    border-top: 1px solid rgb(77, 77, 77);
    border-bottom:  1px solid rgb(77, 77, 77);
}

QTabWidget::tab-bar {
    alignment: center;
    width: 999999px;
}

QTabWidget::tab-bar:top {
    top: 0px;
    border: 1px solid black;
}

QTabWidget::tab-bar:bottom {
    bottom: 1px;
}

QTabWidget::tab-bar:left {
    right: 10px;
}

QTabWidget::tab-bar:right {
    left: 1px;
}

QTabBar::tab {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
}

QTabBar::tab:selected {
    background: rgb(0, 170, 0);
}

QTabBar::tab:!selected {
    background: rgb(17, 0, 30);
}

QTabBar::tab:!selected:hover {
    background: #999;
}

QTabBar::tab:top:!selected {

}

QTabBar::tab:bottom:!selected {

}

QTabBar::tab:top, QTabBar::tab:bottom {
    min-width: 8ex;
    padding: 5px 10px 5px 10px;
}

QTabBar::tab:top:selected {

}

QTabBar::tab:bottom:selected {

}

QTabBar::tab:top:last, QTabBar::tab:bottom:last,
QTabBar::tab:top:only-one, QTabBar::tab:bottom:only-one {

}

QTabBar::tab:left:!selected {

}

QTabBar::tab:right:!selected {

}

QTabBar::tab:left, QTabBar::tab:right {

