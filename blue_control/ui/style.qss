*{
    font-size: 16px;
    selection-background-color:  rgb(77, 177, 177);
}

QsciScintilla {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 5px;
    margin: 1px;
    qproperty-backgroundcolor: #2e313f;
    qproperty-marginbackgroundcolor: #2e313f;
}





QMenuBar {

}

QMenuBar::item {
    spacing: 3px;
    padding: 4px 5px;
    color: grey;
    /* sets background of item. set to something non-transparent
       if you want menu color and item color to be different */
    background: transparent;
}

QMenuBar::item:selected {
    color: rgb(200, 200, 200);
    background-color: rgb(20, 20, 30);
}

QMenuBar::item:pressed {

}






QMenu {
    background-color: #ABABAB; /* sets background of the menu */
    border: 1px solid rgb(77, 77, 77);
    border-radius: 5px;
}

QMenu::item {
    /* sets background of item. set to something non-transparent
       if you want menu color and item color to be different */
    background-color: transparent;
}

QMenu::item:selected { /* when user selects item using mouse or keyboard */
    color: rgb(200, 200, 200);
    background-color: rgb(20, 20, 30);
}

QMenu::item:disabled { /* when user selects item using mouse or keyboard */
    color: rgb(77, 77, 77);
}

QWidget {
   background: rgb(46, 49, 63);
   color: white;
}

Line {
    border-top: 1px solid rgb(77, 77, 77);
    max-height: 1px;
}

QPushButton {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
    padding: 5px;
}

QPushButton {
    color: red;
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
    padding: 5px;
    background: rgb(17, 0, 30)
}

QPushButton:hover {
    background: rgb(101, 67, 33);
}

QPushButton:pressed {
    background: rgb(0, 170, 0);
}

QGroupBox {
    background: rgb(33, 35, 45);
    border: 1px solid rgb(77, 77, 77);
    border-radius: 6px;
    padding: 5px;
    padding-top: 30px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    top: 10px;
    color: white;
    font-size: 14px;
    margin: 1px;
    background-color: transparent;
}


QTabWidget {
    background: rgb(33, 35, 45);
    padding: 0px;
    margin: 0px;
    border: none;
}

QTabWidget::pane {
    background: red;
}


QTabBar {
    color: white;
    background: none;
    border-top: 1px solid rgb(77, 77, 77);
    border-bottom:  1px solid rgb(77, 77, 77);
}

QTabWidget::tab-bar {
    alignment: center;
    width: 999999px;
}

QTabWidget::tab-bar:top {
    top: 0px;
    border: 1px solid black;
}

QTabWidget::tab-bar:bottom {
    bottom: 1px;
}

QTabWidget::tab-bar:left {
    right: 10px;
}

QTabWidget::tab-bar:right {
    left: 1px;
}

QTabBar::tab {
    border: 1px solid rgb(77, 77, 77);
    border-radius: 4px;
    margin: 5px;
}

QTabBar::tab:selected {
    background: rgb(0, 170, 0);
}

QTabBar::tab:!selected {
    background: rgb(17, 0, 30);
}

QTabBar::tab:!selected:hover {
    background: #999;
}

